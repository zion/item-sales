{{page-title "Edit Item"}}
<div class="flex flex-col space-y-6">
  <h2 class="text-2xl">Edit Item</h2>
  <div>
    <label for="description" class="block">Description</label>
    <Input id="description" @value={{this.item.description}}/>
    {{#if this.item.error.description}}
      <p class="text-red italic">{{this.item.error.description.validation}}</p>
    {{/if}}
  </div>
  <div>
    <button {{on "click" this.save}} type="button" class="button">Save</button>
  </div>
</div>