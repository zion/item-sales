{{page-title "Sales"}}

<div class="flex flex-col space-y-6">
  <LinkTo @route="sales.create" class="button w-32 text-center">New Sale</LinkTo>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Cost</th>
        <th>Sales</th>
        <th>Profit Margin</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.model as |sale|}}
        <tr>
          <td>
            <LinkTo @route="sales.view" @model={{sale.id}}>{{format-date sale.business_day 'MM/DD/YYYY'}}</LinkTo>
          </td>
          <td>[item]</td>
          <td>{{sale.total_qty}}</td>
          <td>{{sale.total_cost}}</td>
          <td>{{sale.total_sales}}</td>
          <td>%</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>